{{> jumbotron}}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-md-5 mb-20-row">
            <div class="card">
                <img class="card-img-top" src="{{article.img}}" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">{{article.description}}</p>
                    <a href="http://www.sciencemag.org{{article.link}}" target="_blank"><span class="ion-android-open"></span> View Article</a>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-7">
            <div class="row">
                <div class="col-md-12">
                    {{> articleview-parts/add-comment}}
                </div>
            </div>
            <div class="row mt-20-row">
                <div class="col-md-12">
                    <div class="card">
                        <h4 class="card-header">Comments</h4>
                        <div class="card-body">
                            <h4 class="card-title">Special title treatment</h4>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="#" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
